{
  "compilerOptions": {
      "outDir": "./dist",
      "module": "commonjs",
      "lib": ["es6", "dom"],
      "target": "es2016",
      "declaration": true,
      "removeComments": true,
      "noImplicitAny": false,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "strict": false,
      "allowJs": true,
      "strictNullChecks": false,
      "forceConsistentCasingInFileNames": true,
      "jsx": "react"
  },
  "include": [
    "src"
  ]
}